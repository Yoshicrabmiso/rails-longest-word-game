<h1>New Game</h1>

<div class="container text-center">
  <div class="row">
    <div class="col flex-fill bg-blue">
      <ul class = "d-flex list-unstyled">
        <% @letters.each do |letter| %>
         <li class = "btn btn-primary d-flex justify-content-center align-items-center m-1" style ="width: 50px; height: 50px"><%= letter %></li>
         <% end %>
      </ul>
    </div>
  </div>
</div>
<form action="/score" method="post" data-turbo="false">
  <input type="text" name="answer">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
</form>
